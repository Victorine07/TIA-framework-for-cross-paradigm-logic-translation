theory Simon_64_96
  imports "HOL-Library.Word" "HOL.Bit_Operations"
begin

(* --- SIMON 48/72 --- *)


definition simon_64_96_z2 :: int where "simon_64_96_z2 = 0b11001101101001111110001000010100011001001011000000111011110101"

definition simon_64_96_F_function :: "32 word ⇒ 32 word" where
  "simon_64_96_F_function x = xor (and (word_rotl 1 x) (word_rotl 8 x)) (word_rotl 2 x)"


definition simon_64_96_encrypt_round :: "32 word ⇒ 32 word × 32 word ⇒ 32 word × 32 word" where
  "simon_64_96_encrypt_round k xy = (let (x, y) = xy in (xor (xor k (simon_64_96_F_function x)) y, x))"


definition simon_64_96_decrypt_round_inverse :: "32 word ⇒ 32 word × 32 word ⇒ 32 word × 32 word" where
  "simon_64_96_decrypt_round_inverse k xy_new = (let (x_new, y_new) = xy_new in (y_new, xor (xor x_new k) (simon_64_96_F_function y_new)))"


definition simon_64_96_rho_const :: "32 word" where
  "simon_64_96_rho_const = 0xFFFFFFFC"


function simon_64_96_gen_key_schedule_rec :: "32 word list ⇒ nat ⇒ 32 word list" where
  "simon_64_96_gen_key_schedule_rec ks i = (if i ≥ 42 then ks else
    let z_bit = bit simon_64_96_z2 (i - 3);
        rs_3 = word_rotr 3 (ks ! (i-1)); rs_1 = word_rotr 1 rs_3;
        new_k = xor (xor (xor (ks ! (i-3)) rs_3) rs_1) (xor (if z_bit then 1 else 0) simon_64_96_rho_const)
    in simon_64_96_gen_key_schedule_rec (ks @ [new_k]) (i+1))"
  by pat_completeness auto
termination by (relation "measure (λ(ks, i). 42 - i)") auto


definition simon_64_96_generate_key_schedule :: "32 word list ⇒ 32 word list" where
  "simon_64_96_generate_key_schedule init = simon_64_96_gen_key_schedule_rec init (length init)"


fun simon_64_96_encrypt_iterate :: "32 word × 32 word ⇒ 32 word list ⇒ 32 word × 32 word" where
  "simon_64_96_encrypt_iterate st [] = st" | "simon_64_96_encrypt_iterate st (k#ks) = simon_64_96_encrypt_iterate (simon_64_96_encrypt_round k st) ks"


fun simon_64_96_decrypt_iterate :: "32 word × 32 word ⇒ 32 word list ⇒ 32 word × 32 word" where
  "simon_64_96_decrypt_iterate st ks = foldl (λst_new k. simon_64_96_decrypt_round_inverse k st_new) st (rev ks)"


definition simon_64_96_encrypt_block ::
  "32 word × 32 word ⇒ 32 word list ⇒ 32 word × 32 word" where
"simon_64_96_encrypt_block state keys =
   simon_64_96_encrypt_iterate state keys"


definition simon_64_96_decrypt_block ::
  "32 word × 32 word ⇒ 32 word list ⇒ 32 word × 32 word" where
"simon_64_96_decrypt_block state keys =
   simon_64_96_decrypt_iterate state keys"


definition simon_64_96_encrypt ::
  "64 word ⇒ 32 word list ⇒ 64 word" where
"simon_64_96_encrypt plaintext keys =
  (let left  = ucast (drop_bit 32 plaintext);
       right = ucast plaintext;
       (c_l, c_r) = simon_64_96_encrypt_block (left, right) keys
   in or (push_bit 32 (ucast c_l)) (ucast c_r))"


definition simon_64_96_decrypt ::
  "64 word ⇒ 32 word list ⇒ 64 word" where
"simon_64_96_decrypt ciphertext keys =
  (let left  = ucast (drop_bit 32 ciphertext);
       right = ucast ciphertext;
       (p_l, p_r) = simon_64_96_decrypt_block (left, right) keys
   in or (push_bit 32 (ucast p_l)) (ucast p_r))"


end